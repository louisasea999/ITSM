<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="ddTalkDepartmentUpdaterJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="vendorInfoService"/>
		<property name="targetMethod" value="ddTalkDepartmentUpdater"/>
	</bean>

	<bean name="ddTalkDepartmentUpdaterTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="ddTalkDepartmentUpdaterJob" />
		</property>
		<property name="cronExpression">
			<value>0/10 * * * * ? *</value>
		</property>
	</bean>

</beans>